<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Government Documentation Portal</title>
    <link rel="stylesheet" href="/css/scheme.css">
</head>
<body>
    <!-- Sidebar -->
    <div id="main">
        <div class="sidebar">
            <div class="logo">
                <img src="/Image/logo.jpg" alt="Gov Logo">
            </div>
            <div class="nav-group">
                <div class="nav-header">Main</div>
                <a href="/">
                <div class="nav-item">
                    <p>üè† Home</p>
                </div>
            </a>
            </div>
            <div class="nav-group">
                <div class="nav-header">Schemes</div>
                <div class="nav-item active">üìö All Schemes</div>
                <div class="sub-menu">
                    <% for (let scheme of data) {%>
                    <div class="nav-item"><%=scheme.title%></div>
                    <% }%>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <div class="header">
                <h2>Welcome <span class="user-name">Citizen</span></h2>
                <div class="user-actions">
                    <button id="darkModeToggle" title="Toggle Dark Mode">üåô</button>
                </div>
            </div>

            <!-- Improved Scheme Card -->
            <% data.forEach((scheme)=>{%>
            <div class="scheme-card">
                <div class="scheme-card-header">
                    <h3><%=scheme.title%></h3>
                    <div class="scheme-meta">
                        <span class="scheme-category"><%=name%></span> |
                        <span class="scheme-deadline">Lauched Year: <%=scheme.launched_year%></span>
                    </div>
                </div>
                <div class="scheme-card-body">
                    <p><%=scheme.description%></p>
                    
                    <div class="scheme-benefits">
                        <h4>Benefits:</h4>
                        <ul>
                            <%scheme.benefits.forEach(function(benefit) {%>
                            <li>‚úÖ <%=benefit%></li>
                            <%})%>
                        </ul>
                    </div>

                    <a href="#" class="action-btn">Read More</a>
                </div>
            </div>
            <% } )%>
        </div>
    </div>

    <script src="/js/scheme.js"></script>
</body>
</html>
